<%- include('./partials/header') %>

<div class="w-full min-h-screen bg-zinc-800 mt-12 rounded-xl">
  <div class="flex flex-col gap-5">
    <img
      src="<%=post.banner%>"
      class="w-full h-60 object-cover rounded-t-xl"
      alt=""
    />
    <div class="px-12 pt-7">
      <h1 class="text-white text-4xl border-l-4 border-indigo-500 px-5">
        <%=post.heading%>
      </h1>

      <div class="flex flex-col gap-5 mt-12">
        <div
          class="w-full h-12 text-green-500 flex justify-between items-center px-5"
        >
          <div class=""></div>
          <div class="">
            <h1 class="flex items-center gap-3">
              <span class="material-symbols-outlined"> cloud_upload </span>
              Posted by<a href="/creator/<%=post.user.name%>"
                ><span class="text-purple-500">- @<%=post.user.name%></span></a
              >
            </h1>
          </div>
        </div>
        <div
          class="w-full h-auto rounded-xl text-zinc-200 text-xl leading-loose px-5 pb-12"
        >
          <%- post.desc.replace(/\n/g, '<br />') %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
