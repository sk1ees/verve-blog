<%- include('./partials/header') %>
<!-- quote  -->
<div class="quote w-full bg-zinc-800 pt-9 h-52 rounded-lg mt-5 text-center">
  <h1 class="text-zinc-400 text-md tracking-[5px]">WELCOME TO VERSE.</h1>
  <h1 class="text-[1.7vw] text-zinc-300 mt-5 leading-relaxed">
    Craft Narrative ✍️ that ignites
    <span class="text-purple-500">inspirations</span>💡, <br />
    <span class="text-purple-500">knowledge</span> 📕, and
    <span class="text-purple-500">Entertainment</span>
    🎬
  </h1>
</div>
<!-- latest-post  -->
<%post.forEach((recentPost)=>{%>
<a href="/post/<%=recentPost._id%>">
  <div class="grid grid-cols-2 gap-12 w-full h-[40vh] mt-7 mb-32 items-center">
    <div class="latestPhoto">
      <div class="image bg-zinc-800 w-full h-full rounded-lg overflow-hidden">
        <img src="<%=recentPost.banner%>" alt="" />
      </div>
    </div>
    <div class="latestDesc">
      <div class="w-full h-full cursor-pointer p-5 rounded-lg text-zinc-300">
        <div class="flex flex-col gap-4 py-5 px-6">
          <div class="flex gap-3 items-center">
            <div
              class="profileNav w-8 h-8 rounded-full bg-white object-cover overflow-hidden"
            >
              <img
                src="https://i.pinimg.com/564x/08/2a/16/082a163c0a7b6ab4a27eea77735d39f0.jpg"
                alt=""
                class="object-cover"
              />
            </div>
            <h1 class="text-purple-300">
              @<%=recentPost.user.email.split('@')[0]%>
            </h1>

            <small class="text-zinc-400"
              ><%=timeAgo(recentPost.createdAt)%></small
            >
          </div>
          <h1 class="text-3xl text-white text-wrap">
            <%=recentPost.heading%>...
          </h1>
          <h1><%=recentPost.desc.slice(0,180)%>...</h1>
          <div class="flex gap-3 items-center">
            <h1
              class="text-purple-200 px-5 py-1 border border-purple-400 bg-purple-900 rounded-3xl"
            >
              Movies
            </h1>
            <small class="text-zinc-400">4 mins read</small>
          </div>
        </div>
      </div>
    </div>
  </div>
</a>
<% })%>
<!-- all posts  -->
<div class="text-white">
  <div class="flex justify-between mb-12 text-center">
    <h1 class="text-3xl">Latest Posts</h1>
    <a href="/community">
      <h1 class="flex items-center gap-3 text-purple-200">
        See All
        <span class="material-symbols-rounded"> trending_flat </span>
      </h1>
    </a>
  </div>
  <div class="grid grid-cols-4 gap-7 w-full text-white">
    <%fourRecentPost.forEach((postItem)=>{%>
    <a href="/post/<%=postItem._id%>">
      <div class="h-[80vh]">
        <img
          class="w-full h-[40%] rounded-lg object-cover"
          src="<%=postItem.banner%>"
          alt=""
        />
        <div class="flex flex-col gap-4 py-5">
          <div class="flex gap-4 items-center justify-between">
            <div class="flex gap-3 items-center">
              <div
                class="profileNav w-8 h-8 rounded-full bg-white object-cover overflow-hidden"
              >
                <img
                  src="<%=postItem.user.profileImage%>"
                  alt=""
                  class="object-cover"
                />
              </div>
              <h1 class="text-purple-300 text-md">
                @<%=postItem.user.email.split('@')[0]%>
              </h1>
            </div>

            <small class="text-zinc-400 text-[12px]"
              ><%=timeAgo(postItem.createdAt)%></small
            >
          </div>
          <h1 class="text-xl text-white text-wrap">
            <%=(postItem.heading).slice(0,23)%>..
          </h1>
          <h1><%=(postItem.desc).slice(0,60)%>...</h1>
          <div class="flex gap-3 items-center">
            <h1
              class="text-purple-200 px-5 py-1 border border-purple-400 bg-purple-900 rounded-3xl"
            >
              Sports
            </h1>
            <small class="text-zinc-400">4 mins read</small>
          </div>
        </div>
      </div>
    </a>

    <% })%>
  </div>
</div>
<%- include('./partials/footer') %>
